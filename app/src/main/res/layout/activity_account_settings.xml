<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".AccountSettingsActivity">

    <include
        android:id="@+id/account_settings_activity_tool_bar"
        layout="@layout/toolbar_layout"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECEFF1">

        <LinearLayout style="@style/settings_container">
            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                fancy:fb_defaultColor="#F44336"
                fancy:fb_focusColor="#D32F2F"
                fancy:fb_textColor="#FFFFFF"
                fancy:fb_textSize="20dp"
                fancy:fb_radius="5dp"
                fancy:fb_fontIconSize="20dp"
                fancy:fb_iconPaddingRight="10dp"
                fancy:fb_iconPosition="left"

                android:id="@+id/logout_button"
                fancy:fb_text="Logout" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                fancy:fb_defaultColor="#F44336"
                fancy:fb_focusColor="#D32F2F"
                fancy:fb_textColor="#FFFFFF"
                fancy:fb_textSize="20dp"
                fancy:fb_radius="5dp"
                fancy:fb_fontIconSize="20dp"
                fancy:fb_iconPaddingRight="10dp"
                fancy:fb_iconPosition="left"

                android:id="@+id/delete_account_button"
                fancy:fb_text="Delete Account" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
